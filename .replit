# Fullstack (React + Node + Mongo). Frontend on 5000, Backend on 3001.
# See REPLIT.md for Secrets (MONGODB_URI, JWT_SECRET) and Workflows.

entrypoint = "README.md"
modules = ["nodejs-20"]

[run]
args = ["bash", "scripts/start-replit.sh"]

[run.env]
PORT = "3001"
VITE_PORT = "5000"
VITE_PROXY_TARGET = "http://localhost:3001"

# Frontend (Vite) = main webview; Backend = API only.
[[ports]]
localPort = 5000
externalPort = 80
exposeLocalhost = true

[[ports]]
localPort = 3001
externalPort = 3001
exposeLocalhost = true
